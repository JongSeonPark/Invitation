rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection (Profile, Diamonds, Achievements)
    // Key: Nickname
    // Public Read/Write (Simplified for Nickname-only system)
    match /users/{nickname} {
      allow read, write: if true;
    }

    // Scores Collection (Dino Game)
    // Key: Nickname or UID (we will migrate to Nickname)
    match /scores/{docId} {
      allow read, write: if true;
    }

    // Bouquet Scores Collection (Bouquet Game)
    match /bouquet_scores/{docId} {
      allow read, write: if true;
    }
  }
}
